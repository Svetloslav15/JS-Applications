{{> header}}
<div class="content">
    {{> navigation}}
    <section id="viewComments">
        <div class="post">
            <div class="col thumbnail">
                <a href="{{post.url}}">
                    <img src="{{post.imageUrl}}">
                </a>
            </div>
            <div class="post-content">
                <div class="title">
                    <a href="{{post.url}}">
                        {{post.title}}
                    </a>
                </div>
                <div class="details">
                    {{#if description}}
                        <p>{{post.description}}</p>
                    {{else}}
                        <p>No description</p>
                    {{/if}}
                    <div class="info">
                        submitted {{date}} ago by {{post.author}}
                    </div>
                    <div class="controls">
                        <ul>
                            {{#if isAuthor}}
                                <li class="action"><a class="editLink" href="#/edit/post/:{{post._id}}">edit</a></li>
                                <li class="action"><a class="deleteLink" href="#/delete/post/:{{post._id}}">delete</a></li>
                            {{/if}}
                        </ul>
                    </div>

                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="post post-content">
            <form action="#/create/comment" method="post" id="commentForm">
                <input type="hidden" name="postId" value="{{post._id}}" />
                <label>Comment</label>
                <textarea name="content" type="text"></textarea>
                <input type="submit" value="Add Comment" id="btnPostComment">
            </form>
        </div>
        {{#if comments}}
            {{#each comments}}
                {{> comment}}
            {{/each}}
            {{else}}
            <p>No comments</p>
        {{/if}}
    </section>
</div>
{{> footer}}