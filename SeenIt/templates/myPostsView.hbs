{{> header}}
<div class="content">
    {{> navigation}}
    <section id="viewMyPosts">
        <div class="post post-content">
            <h1>Your Posts</h1>
        </div>
        <div class="posts">
            {{#if posts}}
                {{#each posts}}
                    {{> post}}
                {{/each}}
            {{else}}
                <div>No posts in database</div>
            {{/if}}
        </div>
    </section>
</div>
{{> footer}}